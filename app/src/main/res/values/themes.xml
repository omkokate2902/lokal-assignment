<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LokalAssignment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LokalAssignment" parent="Base.Theme.LokalAssignment" />

    <style name="JobDetailText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Material Card View Style -->
    <style name="MaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="strokeColor">@color/gray_300</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <!-- Job Title Style -->
    <style name="JobTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Job Text Style (Place, Salary, Phone) -->
    <style name="JobTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Bookmark Icon Style -->
    <style name="BookmarkIconStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:contentDescription">Bookmark Icon</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!-- TextView with Material Style (Generic) -->
    <style name="MaterialTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <color name="gray_300">#E0E0E0</color>

</resources>