<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="18dp">

        <!-- Title and Bookmark Button -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/details_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:paddingEnd="8dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:text="Job Title" />

            <ImageView
                android:id="@+id/details_bookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bookmarks"
                android:contentDescription="Bookmark Icon"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Dynamic content below -->
        <TextView
            android:id="@+id/details_company"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_place"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_salary"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_job_type"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_experience"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_qualification"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_job_category"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_job_role"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_openings"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_views"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_applications"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_premium"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_phone"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_whatsapp"
            style="@style/JobDetailText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/details_other_details"
            style="@style/JobDetailText"
            android:text="Click to call or Whatsapp"/>
    </LinearLayout>
</ScrollView>